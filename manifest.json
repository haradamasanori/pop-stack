{
  "manifest_version": 3,
  "name": "Web Stack Spy",
  "version": "2.0.0",
  "description": "Analyzes web page content to detect technologies like frameworks and libraries.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Web Stack Spy"
  },
  "icons": {
    "128": "static/icon128.png",
    "256": "static/icon256.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.json"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
