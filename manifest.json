{
  "manifest_version": 3,
  "name": "Popular Stacks â€” Web Stack Component Detector",
  "version": "2.0.0",
  "description": "Analyzes the current page's tech stack, including JS frameworks, HTTP servers, cloud providers and more. Free and open source.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Popular Stacks"
  },
  "icons": {
    "128": "static/pancake128.png",
    "256": "static/pancake256.png",
    "512": "static/pancake512.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["config/stacks.json"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
